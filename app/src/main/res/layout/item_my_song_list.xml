<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/item_my_song_list_content_linear_layour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@null"
        android:layout_marginTop="@dimen/activity_padding_small"
        android:layout_marginBottom="@dimen/activity_padding_small">
        <LinearLayout
            android:id="@+id/item_my_song_list_bg_linear_layout"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@color/default_color"
            android:gravity="center">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/icon_create_song_list"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:paddingLeft="10dp">
            <TextView
                android:id="@+id/item_my_song_list_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textSize="@dimen/base_text_size_small"
                android:text="@string/create_new_song_list"/>
            <TextView
                android:id="@+id/item_my_song_list_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_padding_small"
                android:textSize="@dimen/base_text_size_small"
                android:textColor="@color/colorDarkGrey"
                android:text="@string/create_new_song_list"/>


        </LinearLayout>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/app_name"
            android:src="@drawable/img_setting_right_arrow"/>
    </LinearLayout>
</LinearLayout>
