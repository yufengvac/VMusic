<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/colorWhite"
    android:orientation="vertical">

    <TextView
        android:id="@+id/song_option_activity_name_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/base_text_size"
        android:padding="@dimen/activity_padding"
        android:text="大家"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorGrey"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/option_height"
            style="@style/song_options_textview"
            android:drawableTop="@drawable/icon_options_favor"
            android:text="收藏"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/option_height"
            android:drawableTop="@drawable/icon_options_add_song_list"
            style="@style/song_options_textview"
            android:text="加入歌单"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/option_height"
            style="@style/song_options_textview"
            android:drawableTop="@drawable/icon_options_delete"
            android:text="删除"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/option_height"
            style="@style/song_options_textview"
            android:drawableTop="@drawable/icon_options_share"
            android:text="分享"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/option_height"
            style="@style/song_options_textview"
            android:drawableTop="@drawable/icon_options_ring"
            android:text="设为铃声"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorGrey"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/option_height"
            style="@style/song_options_textview"
            android:drawableTop="@drawable/icon_options_play_next"
            android:text="插队播放"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/option_height"
            style="@style/song_options_textview"
            android:drawableTop="@drawable/icon_options_singer"
            android:text="查看歌手"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/option_height"
            style="@style/song_options_textview"
            android:drawableTop="@drawable/icon_options_album"
            android:text="查看专辑"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/option_height"
            style="@style/song_options_textview"
            android:drawableTop="@drawable/icon_options_comment"
            android:text="评论"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/option_height"
            style="@style/song_options_textview"
            android:drawableTop="@drawable/icon_options_info"
            android:text="歌曲信息"/>
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorWhite"
        android:text="取消"
        android:textSize="@dimen/base_text_size"/>
</LinearLayout>
