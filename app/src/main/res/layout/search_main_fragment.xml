<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
    android:background="@color/colorGrey">

    <LinearLayout
        android:id="@+id/search_main_fragment_top_content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_height"
        android:background="@color/light_black"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/top_status_bar_height"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/home_search_top_back_imageview"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:clickable="true"
                android:src="@drawable/icon_back"/>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/search_main_fragment_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/search_edit_bg"
                    android:hint="歌手/歌曲/专辑/歌单/MV"
                    android:paddingLeft="35dp"
                    android:singleLine="true"
                    android:imeOptions="actionSearch"
                    android:textSize="13sp"/>

                <ImageView
                    android:id="@+id/home_search_fragment_clearedit_imageview"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="7dp"
                    android:layout_marginTop="7dp"
                    android:clickable="true"
                    android:contentDescription="@string/app_name"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:src="@drawable/icon_clear_edit"
                    android:visibility="gone"/>
            </RelativeLayout>

            <ImageView
                android:id="@+id/home_search_fragment_search"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:clickable="true"
                android:contentDescription="@string/app_name"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:src="@drawable/main_head_right_search"/>
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/search_main_fragment_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</LinearLayout>
